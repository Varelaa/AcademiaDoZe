<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AcademiaDoZe.Presentation.AppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AcademiaDoZe.Presentation.AppMaui.Views"
    Title="Academia do Zé">

    <!-- Dashboard -->
    <FlyoutItem Title="Dashboard" Route="dashboard">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe88a;" />
            <!-- home -->
        </FlyoutItem.Icon>

        <ShellContent 
            ContentTemplate="{DataTemplate views:DashboardListPage}" 
            Route="dashboard" />
    </FlyoutItem>

    <!-- Logradouros -->
    <FlyoutItem Title="Logradouros" Route="logradouros">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe7f1;" />
            <!-- location_on -->
        </FlyoutItem.Icon>

        <ShellContent 
            ContentTemplate="{DataTemplate views:LogradouroListPage}" 
            Route="logradouros" />
    </FlyoutItem>

    <!-- Configurações -->
    <FlyoutItem Title="Configurações" Route="configuracoes">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe8b8;" />
            <!-- settings -->
        </FlyoutItem.Icon>

        <ShellContent 
            ContentTemplate="{DataTemplate views:ConfigPage}" 
            Route="configuracoes" />
    </FlyoutItem>

</Shell>
